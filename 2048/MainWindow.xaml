        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="#A5A5A5" BorderThickness="7">
            <TextBlock x:Name="tile_00" Style="{StaticResource Tile0}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"/>
        </Border>
            <Border Grid.Row="0" Grid.Column="1" BorderBrush="#A5A5A5" BorderThickness="7">
            <TextBlock x:Name="tile_01" Style="{StaticResource Tile0}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"/>
